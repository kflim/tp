<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
         <ColumnConstraints />
    </columnConstraints>
      <Label fx:id="tasksDue" styleClass="cell_small_label" text= "\$tasksDue" GridPane.columnIndex="2" />
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets bottom="5" left="15" right="5" top="5" />
      </padding>
      <HBox alignment="CENTER_LEFT" spacing="5">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="name" styleClass="cell_big_label" text="\$first">
               <HBox.margin>
                  <Insets bottom="2.0" right="2.0" top="2.0" />
               </HBox.margin></Label>
      </HBox>
         <FlowPane fx:id="importance" nodeOrientation="RIGHT_TO_LEFT" />
      <FlowPane fx:id="tags">
            <VBox.margin>
               <Insets bottom="2.0" right="2.0" top="2.0" />
            </VBox.margin></FlowPane>
      <Label fx:id="phone" styleClass="cell_small_label" text="\$phone">
            <VBox.margin>
               <Insets bottom="2.0" right="2.0" top="2.0" />
            </VBox.margin></Label>
      <Label fx:id="address" styleClass="cell_small_label" text="\$address">
            <VBox.margin>
               <Insets bottom="2.0" right="2.0" top="2.0" />
            </VBox.margin></Label>
      <Label fx:id="email" styleClass="cell_small_label" text="\$email">
            <VBox.margin>
               <Insets bottom="2.0" right="2.0" top="2.0" />
            </VBox.margin></Label>
    </VBox>
      <Label fx:id="description" styleClass="cell_small_label" text= "\$description" GridPane.columnIndex="1" />
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
  </GridPane>
</HBox>
